<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorSurface">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:id="@+id/cv_item_processingtype"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title_processing_item"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                tools:text="TÃ­tulo"
                android:layout_marginHorizontal="8dp"
                android:padding="8dp"
                android:maxLines="2"
                android:elevation="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/iv_backdrop"
                android:elevation="0dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/logo_reciclaia_big"
                android:scaleType="centerCrop"
                android:maxHeight="180dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/iv_backdrop"
                app:layout_constraintBottom_toBottomOf="@id/iv_backdrop"
                android:background="?attr/colorSurfaceVariant"
                android:alpha="0.6"
                android:elevation="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/tv_description_processing_type"
                app:layout_constraintTop_toBottomOf="@id/tv_title_processing_item"
                android:background="@drawable/rounded_all_corners_6"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="100dp"
                android:padding="8dp"
                android:elevation="4dp"
                tools:text="@tools:sample/lorem/random"
                android:textSize="13sp"
                android:backgroundTint="?attr/colorSurface"/>
            <androidx.constraintlayout.widget.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier_bottom"
                app:barrierDirection="bottom"
                app:barrierMargin="10dp"
                app:constraint_referenced_ids="tv_description_processing_type"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>