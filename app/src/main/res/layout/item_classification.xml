<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_all_corners"
    android:backgroundTint="?attr/colorSurfaceVariant"
    android:id="@+id/item_root"
    android:layout_margin="8dp">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/iv_processing"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_all_corners"
        android:backgroundTint="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:src="@drawable/info"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mapped_tag"
        style="@style/MaterialAlertDialog.Material3.Body.Text"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:textAlignment="center"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintTop_toTopOf="@id/iv_processing"
        app:layout_constraintEnd_toStartOf="@id/iv_processing"
        app:layout_constraintStart_toEndOf="@id/cv_pic"
        android:paddingHorizontal="8dp"
        tools:text="ejemplo tag"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mapped_processing"
        style="@style/MaterialAlertDialog.Material3.Body.Text"
        android:textStyle="bold"
        android:textSize="12sp"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:textAlignment="textStart"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintTop_toBottomOf="@id/tv_mapped_tag"
        app:layout_constraintBottom_toTopOf="@id/tv_date"
        app:layout_constraintStart_toEndOf="@id/cv_pic"
        app:layout_constraintEnd_toStartOf="@id/iv_processing"
        android:paddingHorizontal="8dp"
        tools:text="ejemplo processing"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextView.Monospace"
        android:id="@+id/tv_date"
        app:layout_constraintBottom_toBottomOf="@id/iv_processing"
        app:layout_constraintStart_toEndOf="@id/cv_pic"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="11sp"
        android:textAlignment="textStart"
        tools:text="2000-00-00 88:88"
        app:layout_constraintEnd_toStartOf="@id/iv_processing"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_reciclaia_big"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>