<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface">
    <!--TÃ­tulo-->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/recicla_ia"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimary"/>
    <!--Logo-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/bt_palette"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="24dp">
        <ImageView
            android:id="@+id/iv_logo"
            android:contentDescription="logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_reciclaia_no_background"
            android:background="@drawable/gradient_for_logo"/>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <Button
        android:id="@+id/bt_palette"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/key_colors"
        android:backgroundTint="?attr/colorSecondary"/>
    <Button
        android:id="@+id/bt_test_api"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/test_api"
        android:backgroundTint="?attr/colorSecondary"/>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_view"
        app:layout_constraintTop_toBottomOf="@id/bt_palette"
        app:layout_constraintBottom_toTopOf="@id/ll_skip"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="12dp"
        />

    <LinearLayout
        android:id="@+id/ll_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/bt_app_view_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_based_app"
                android:layout_weight="1"
                android:textSize="12sp"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginHorizontal="4dp"/>
            <Button
                android:id="@+id/bt_app_compose_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="@string/compose_based_app"
                android:backgroundTint="?attr/colorPrimary"
                android:tooltipText="Inicia la vista creada con el framework JetPack Compose"
                android:layout_marginHorizontal="4dp"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_no_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/do_not_show_tutorial_again"
            android:paddingHorizontal="12dp"
            android:layout_marginVertical="8dp"/>
    </LinearLayout>

