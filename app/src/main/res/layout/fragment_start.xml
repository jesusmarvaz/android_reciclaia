<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface">
    <!--TÃ­tulo-->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:textSize="24sp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/recicla_ia"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimary"/>
    <!--Logo-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:background="?attr/colorSecondary">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_reciclaia_big"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_logo"
        android:layout_marginTop="48dp"
        android:textSize="18sp"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Primary"
        android:textColor="?attr/colorSurface"
        android:textAlignment="center"
        android:background="?attr/colorPrimary"/>
    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_text1"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Secondary"
        android:textColor="?attr/colorSurface"
        android:textAlignment="center"
        android:background="?attr/colorSecondary"/>
    <TextView
        android:id="@+id/tv_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_text2"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Tertiary"
        android:textColor="?attr/colorSurface"
        android:textAlignment="center"
        android:background="?attr/colorTertiary"/>
    <TextView
        android:id="@+id/tv_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_text3"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Neutral (Surface)"
        android:textColor="?attr/colorTertiary"
        android:textAlignment="center"
        android:background="?attr/colorSurface"/>
    <TextView
        android:id="@+id/tv_text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_text4"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Neutral Variant (Surface Variant)"
        android:textColor="?attr/colorTertiary"
        android:textAlignment="center"
        android:background="?attr/colorSurfaceVariant"/>
    <TextView
        android:id="@+id/tv_text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_text5"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Color Error"
        android:textColor="?attr/colorSurface"
        android:textAlignment="center"
        android:background="?attr/colorError"/>
    <!--Texto-->

    <!--<androidx.compose.ui.platform.AndroidComposeView
        android:id="@+id/compose_view"
        app:layout_constraintTop_toBottomOf="@id/"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>