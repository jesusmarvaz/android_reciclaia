<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurfaceVariant">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/rounded_arrow_back_24"
        app:navigationIconTint="?attr/colorPrimary"
        app:titleTextColor="?attr/colorPrimary"
        app:title="@string/ai_visor"
        style="@style/MyToolbar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/visor_parent"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="?attr/colorSurfaceContainer">
        <!--<com.ingencode.reciclaia.ui.components.visor.EditableImageView
            android:id="@+id/visor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />-->
        <!--<com.ingencode.reciclaia.ui.components.visor.EditableVisor
            android:id="@+id/visor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />-->
        <com.ingencode.reciclaia.ui.components.visor.ComposedVisor
            android:id="@+id/composed_visor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/shader_and_pb"
        layout="@layout/pb_and_shader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible"
        android:elevation="8dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/visor_parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_info_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_1"
            android:padding="@dimen/margin_1"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="@dimen/margin_1"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_1">
            <TextView
                android:id="@+id/tv_title_and_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:text="@string/name_the_capture"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="title"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_all_corners"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:inputType="text"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_and_comments"
                android:textColor="?attr/colorPrimary"
                android:hint="@string/title"/>

            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="description"
                android:padding="8dp"
                android:background="@drawable/rounded_all_corners"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:layout_marginTop="16dp"
                android:textColor="?attr/colorPrimary"
                android:minHeight="64dp"
                android:gravity="top"
                android:hint="@string/description"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_classification_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_1"
                android:padding="@dimen/margin_1"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="@dimen/margin_1"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/cv_info_capture">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_1">
                    <TextView
                        android:id="@+id/tv_classification_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/classification_results"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="8dp"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="?attr/colorSurfaceVariant"
                        android:background="@drawable/rounded_all_corners"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_classification_results">
                        <androidx.constraintlayout.widget.Guideline
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/guideline_vertical"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.4"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_predictions_tag"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="@string/preditions"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            tools:text="predicciones"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_predictions_value"
                            app:layout_constraintStart_toEndOf="@id/guideline_vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:fontFamily="@font/ubuntumono_regular"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="false"
                            android:singleLine="true"
                            android:text="{predicción1 - predicción 2: estesdsdfsdf sdfsd sdf sdf sdfsd fsd  }" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_timestamp_tag"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
                            app:layout_constraintTop_toBottomOf="@id/tv_predictions_tag"
                            android:text="@string/preditions"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            tools:text="timestamp tag"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_timestamp_value"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/guideline_vertical"
                            app:layout_constraintTop_toBottomOf="@id/tv_predictions_value"
                            android:fontFamily="@font/ubuntumono_regular"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="{sample timestamp }" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>