<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/MyToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/rounded_arrow_back_24"
        app:navigationIconTint="?attr/colorPrimary"
        app:title="@string/ai_visor"
        app:titleTextColor="?attr/colorPrimary" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/visor_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/topAppBar">
        <com.ingencode.reciclaia.ui.components.visor.ComposedVisor
            android:id="@+id/composed_visor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/visor_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurfaceVariant"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="aux_view,cv_classification_results,cv_classification_info"
                />
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="aux_view,cv_classification_results"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/aux_view"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/transparent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_classification_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_1"
                android:padding="@dimen/margin_1"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="@dimen/margin_1"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_1">

                    <TextView
                        android:id="@+id/tv_classification_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:text="@string/classification_result"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_classification_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_all_corners"
                        android:backgroundTint="?attr/colorPrimaryContainer"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_classification_result">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/tv_prediction_value"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="botella de plástico es una botella que se recicla en el amarillo"
                            android:ellipsize="marquee"
                            android:scrollHorizontally="true"
                            android:textAlignment="center"
                            android:singleLine="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_classification_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_1"
                android:padding="@dimen/margin_1"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="@dimen/margin_1"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/barrier2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_1">

                    <TextView
                        android:id="@+id/tv_classification_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:text="@string/classification_information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_all_corners"
                        android:backgroundTint="?attr/colorSurfaceVariant"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_classification_info">

                        <TextView
                            android:id="@+id/tv_model_tag"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/model_info"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                             />

                        <TextView
                            android:id="@+id/tv_model_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntumono_regular"
                            android:maxLines="6"
                            android:singleLine="false"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_model_tag"
                            tools:text="{info del modelo} | version: 3.4" />

                        <TextView
                            android:id="@+id/tv_predictions_extended_tag"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/preditions"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_model_value" />

                        <TextView
                            android:id="@+id/tv_predictions_extended_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_regular"
                            android:maxLines="4"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:ellipsize="middle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_predictions_extended_tag"
                            tools:text="{sample prediction1: tag: botella_plástico, accuracy: 84% }" />
                        <TextView
                            android:id="@+id/tv_datetime_tag"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/datetime"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_predictions_extended_value" />

                        <TextView
                            android:id="@+id/tv_datetime_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_regular"
                            android:maxLines="4"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_datetime_tag"
                            tools:text="{sample datetime}" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_info_capture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_1"
                android:padding="@dimen/margin_1"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="@dimen/margin_1"
                app:cardElevation="0dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/barrier">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_1">

                    <TextView
                        android:id="@+id/tv_title_and_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:text="@string/name_the_capture"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:autofillHints="title"
                        android:background="@drawable/rounded_all_corners"
                        android:backgroundTint="?attr/colorSurfaceVariant"
                        android:hint="@string/title"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_and_comments" />

                    <EditText
                        android:id="@+id/comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:autofillHints="description"
                        android:background="@drawable/rounded_all_corners"
                        android:backgroundTint="?attr/colorSurfaceVariant"
                        android:gravity="top"
                        android:hint="@string/description"
                        android:inputType="textMultiLine"
                        android:minHeight="64dp"
                        android:padding="8dp"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/title" />
                    <TextView
                        android:id="@+id/tv_location_tag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/location"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/iv_location_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/comments"/>

                    <ImageView
                        android:layout_width="@dimen/icon_padding10dp"
                        android:layout_height="@dimen/icon_padding10dp"
                        android:contentDescription="@string/location_icon"
                        android:padding="10dp"
                        android:id="@+id/iv_location_icon"
                        android:src="@drawable/location"
                        app:layout_constraintTop_toTopOf="@id/tv_location_tag"
                        app:layout_constraintBottom_toBottomOf="@id/tv_location_tag"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="?attr/colorPrimary"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tv_location_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntumono_regular"
                        android:singleLine="true"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_location_tag"
                        tools:text="{sample }" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <include
        android:id="@+id/shader_and_pb"
        layout="@layout/pb_and_shader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>